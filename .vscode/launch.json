{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Plantao Backend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start:dev"],
      "sourceMaps": true,
      "restart": true,
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "protocol": "inspector"
    }
  ]
}